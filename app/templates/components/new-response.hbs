{{#if addNewResponse}}
<h1>New Response</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="answer">Answer</label>
        {{input value=answer id="answer"}}
      </div>
      <div class="form-group">
        <label for="writer">Writer</label>
        {{input value=writer id="writer"}}
      </div>
      <button {{action 'saveResponse'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'responseFormShow'}}>New Response</button>
{{/if}}
